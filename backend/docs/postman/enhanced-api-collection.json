    {
      "name": "OAuth Enhancement",
      "item": [
        {
          "name": "Enhance Token with User Data",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has user data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('user');",
                  "    pm.expect(jsonData.user).to.have.property('userId');",
                  "    pm.expect(jsonData.user).to.have.property('email');",
                  "    pm.expect(jsonData.user).to.have.property('subscription');",
                  "    pm.expect(jsonData.user).to.have.property('credits');",
                  "});",
                  "",
                  "pm.test(\"Credits included in user data\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.user.credits).to.have.property('freeCredits');",
                  "    pm.expect(jsonData.user.credits).to.have.property('proCredits');",
                  "    pm.expect(jsonData.user.credits).to.have.property('totalAvailable');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"access_token\": \"{{accessToken}}\",\n  \"include_user_data\": \"true\",\n  \"include_credits\": \"false\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/oauth/token/enhance",
              "host": ["{{baseUrl}}"],
              "path": ["oauth", "token", "enhance"]
            },
            "description": "Enhance OAuth token response with full user profile and credit information. Use this immediately after obtaining an access token from /oauth/token to reduce round trips.\n\n**Rate Limit:** 30 requests/minute"
          },
