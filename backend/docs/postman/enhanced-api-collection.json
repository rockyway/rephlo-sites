                  "pm.test(\"Subscription has correct structure\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.subscription).to.have.property('tier');",
                  "    pm.expect(jsonData.subscription).to.have.property('status');",
                  "    pm.expect(jsonData.subscription).to.have.property('cancelAtPeriodEnd');",
                  "});",
                  "",
                  "pm.test(\"Preferences have correct structure\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.preferences).to.have.property('emailNotifications');",
                  "    pm.expect(jsonData.preferences).to.have.property('usageAlerts');",
                  "});",
                  "",
                  "pm.test(\"Email is valid format\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.email).to.match(/^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$/);",
                  "});"
                ],
