      "name": "Credits",
      "item": [
        {
          "name": "Get Detailed Credits",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response has required fields\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData).to.have.property('freeCredits');",
                  "    pm.expect(jsonData).to.have.property('proCredits');",
                  "    pm.expect(jsonData).to.have.property('totalAvailable');",
                  "    pm.expect(jsonData).to.have.property('lastUpdated');",
                  "});",
                  "",
                  "pm.test(\"Free credits have correct structure\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.freeCredits).to.have.property('remaining');",
                  "    pm.expect(jsonData.freeCredits).to.have.property('monthlyAllocation');",
                  "    pm.expect(jsonData.freeCredits).to.have.property('used');",
                  "    pm.expect(jsonData.freeCredits).to.have.property('resetDate');",
                  "    pm.expect(jsonData.freeCredits).to.have.property('daysUntilReset');",
                  "});",
                  "",
                  "pm.test(\"Pro credits have correct structure\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.proCredits).to.have.property('remaining');",
                  "    pm.expect(jsonData.proCredits).to.have.property('purchasedTotal');",
                  "    pm.expect(jsonData.proCredits).to.have.property('lifetimeUsed');",
                  "});",
                  "",
                  "pm.test(\"Total available matches sum of free and pro\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    var expectedTotal = jsonData.freeCredits.remaining + jsonData.proCredits.remaining;",
                  "    pm.expect(jsonData.totalAvailable).to.eql(expectedTotal);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
